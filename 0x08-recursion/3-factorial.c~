#include "main.h"

/**
 *factorial - A function that returns the factorial of a given number.
 *@n: An input integer
 *Return: The factorial of a given number, or -1 if n < 0.
 */

int factorial(int n)
{
	if (n < 0)
		return (-1);
	if (n == 0)
		return (1);
       	else
		return (n * factorial(n - 1));
}
